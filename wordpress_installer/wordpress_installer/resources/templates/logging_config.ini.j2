[loggers]
keys=root,wordpress_installer

[handlers]
keys=fileHandler,consoleHandler

[formatters]
keys=simpleFormatter

[logger_root]
level=DEBUG
handlers=consoleHandler

[logger_wordpress_installer]
level=NOTSET
handlers=fileHandler
qualname=wordpress_installer

[handler_fileHandler]
class=FileHandler
formatter=simpleFormatter
args=('{{ LOG_LOCATION }}', 'a')

[handler_consoleHandler]
class=StreamHandler
level=DEBUG
formatter=simpleFormatter
args=(sys.stdout,)

[formatter_simpleFormatter]
format=%(asctime)s - %(name)s - %(levelname)s - %(message)s
datefmt=